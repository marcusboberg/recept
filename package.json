{
  "name": "recept",
  "version": "1.0.0",
  "private": true,
  "description": "Git-backed recipe website with JSON as the single source of truth.",
  "scripts": {
    "dev": "node scripts/print-local-ip.js && next dev -H 0.0.0.0",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --pretty --noEmit",
    "typecheck:worker": "npm run --prefix wordpress-proxy typecheck",
    "check": "npm run lint && npm run typecheck && npm run typecheck:worker",
    "validate": "node --loader ts-node/esm scripts/validate-recipes.ts",
    "validate:recipes": "node --loader ts-node/esm scripts/validate-recipes.ts"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.6.0",
    "firebase": "^10.14.1",
    "monaco-editor": "^0.55.1",
    "next": "^14.2.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.7.4",
    "@types/react": "^18.3.10",
    "@types/react-dom": "^18.3.0",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "type": "module",
  "packageManager": "yarn@4.10.3+sha512.c38cafb5c7bb273f3926d04e55e1d8c9dfa7d9c3ea1f36a4868fa028b9e5f72298f0b7f401ad5eb921749eb012eb1c3bb74bf7503df3ee43fd600d14a018266f"
}
